<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/on_the_road">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp" android:background="#cc835829">

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_country"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="false"
                android:maxLines="4"
                android:layout_gravity="center_horizontal"
                android:background="#33ffffff"
                android:layout_margin="5dp"
                android:padding="10dp" android:textColor="@android:color/black"
                android:text="@string/customize_country_hint"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1" android:layout_margin="5dp"
                      android:orientation="horizontal"
                      android:background="#33ffffff">
            <CheckBox android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/companion_old"
                      android:text="@string/customize_companion_old"
                      android:layout_margin="5dp"
                      android:gravity="center"
                      android:checkMark="?android:attr/listChoiceIndicatorSingle"
                      android:layout_weight="1"/>
            <Spinner android:id="@+id/spinner_old"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:prompt="@string/count_hint"
                     android:gravity="center"
                     android:layout_weight="1"
                     android:visibility="invisible"
                     android:entries="@array/people_count"/>
            <CheckBox android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/companion_child"
                      android:text="@string/customize_companion_child"
                      android:layout_margin="5dp"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:checkMark="?android:attr/listChoiceIndicatorSingle"
                    />
            <Spinner android:id="@+id/spinner_child"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:visibility="invisible"
                     android:prompt="@string/count_hint" android:layout_weight="1"
            android:entries="@array/people_count"/>
            <CheckBox android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/companion_friend"
                      android:text="@string/customize_companion_friend"
                      android:layout_margin="5dp"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:checkMark="?android:attr/listChoiceIndicatorSingle"
                    />
            <Spinner android:id="@+id/spinner_friend"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:prompt="@string/count_hint"
                     android:layout_weight="1"
                     android:visibility="invisible"
                     android:entries="@array/people_count"/>
        </LinearLayout>

        <!--<DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker"
                android:layout_gravity="center_horizontal" android:background="@android:color/darker_gray"/>-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:layout_weight="1"
                      android:orientation="horizontal">
            <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/button_start"
                    android:background="#33ffffff"
                    android:layout_margin="5dp"
                    android:maxLines="2"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/customize_start"/>
            <Button android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/button_end"
                    android:maxLines="2"
                    android:background="#33ffffff"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/customize_end"/>
        </LinearLayout>

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button_confirm"
                android:background="#33ffffff"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/customize_button_confirm"/>
    </LinearLayout>
</LinearLayout>